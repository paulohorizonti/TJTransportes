@using PagedList.Mvc
 @model PagedList.IPagedList<TJTransportesApp.Models.Perfil>
                


@{ ViewBag.Title = "Index"; }

<div class="row p-1">
    <div class="card p-0">
        <div class="card-header">
            <span class="prn-font-card-header"> Cadastro de Perfis</span>
           
            <a class="float-end dis-block btn btn-sm btn-primary create" href="@Url.Action("Incluir","Perfil")"><i class="fas fa-plus-circle"></i>  Novo </a>
        </div>
        <div class="card-body">

            @if (ViewBag.MensagemGravar != "")
            {
                if (ViewBag.MensagemGravar == "Já Existe um perfil com essa descrição")
                {
        <div class="alert alert-danger alert-dismissible fade show prn-alert" role="alert">
            <strong>@ViewBag.MensagemGravar</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div> }


    if (ViewBag.MensagemGravar == "Registro Salvo com sucesso")
    {
        <div class="alert alert-success alert-dismissible fade show prn-alert" role="alert">
            <strong>@ViewBag.MensagemGravar</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div> }
    if (ViewBag.MensagemGravar == "Não foi possivel salvar o registro")
    {
        <div class="alert alert-danger alert-dismissible fade show prn-alert" role="alert">
            <strong>@ViewBag.MensagemGravar</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div> }


    if (ViewBag.MensagemGravar == "Não é possivel Deletear esse registro. Há acessos usando este perfil!")
    {
        <div class="alert alert-danger alert-dismissible fade show prn-alert" role="alert">
            <strong>@ViewBag.MensagemGravar</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div> }


                        if (ViewBag.MensagemGravar == "Registro Excluído com sucesso")
                        {
        <div class="alert alert-success alert-dismissible fade show prn-alert" role="alert">
            <strong>@ViewBag.MensagemGravar</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    if (ViewBag.MensagemGravar == "Não foi possivel Excluir o registro")
    {
        <div class="alert alert-danger alert-dismissible fade show prn-alert" role="alert">
            <strong>@ViewBag.MensagemGravar</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>  }






}

            @using (Html.BeginForm("Index", "Perfil", FormMethod.Get))
            {

        <div class="row">


            <div class="col-10">
                <label for="inputDescricao" class="form-label">Descrição</label>
                <input type="text" class="form-control" id="inputDescricao">
            </div>

            <div class="col-2">
                <label for="inputStatus" class="form-label">Status</label>
                <select id="inputStatus" name="inputStatus" class="form-select">
                    @if (ViewBag.Status == 0)
                    {


                <option value="0" selected>Ativo</option>


                                    <option value="1">Inativo</option>


                                                        <option value="2">Todos</option> }
                                                                        else
                                                                        {
                                                                            if (ViewBag.Status == 1)
                                                                            {


                                                                                <option value="0">Ativo</option>


                                                                                <option value="1" selected>Inativo</option>


                                                                                <option value="2">Todos</option>
                                                                            }
                                                                            else
                                                                            {
                                                                                <option value="0">Ativo</option>


                                                                                <option value="1" >Inativo</option>


                                                                                <option value="2" selected>Todos</option>
                                                                            }
                                                                        }

                </select>
            </div>



        </div>

                        <div class="row mt-2">

                            <div class="col-12">
                                <button type="submit" class="btn btn-success m-1 btn-sm" style="float: right; color: #ffffff;"><i class="fas fa-search"></i> &nbsp;Pesquisar</button>
                                <button class="btn btn-secondary m-1 btn-sm dropdown-toggle" type="button" style="float: right; color: #ffffff;" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-upload"></i>&nbsp;Exportar</button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="#">Excel</a></li>
                                    <li><a class="dropdown-item" href="#">Pdf</a></li>

                                </ul>
                                <button type="submit" class="btn btn-warning m-1 btn-sm" style="float: right; color:#ffffff;"><i class="fas fa-broom"></i> &nbsp;Limpar</button>
                            </div>
                        </div>}


            <div class="row mt-2">
                <!--Tabela-->
                <table class="table  table-hover thead-dark table-striped table-borderles table-sm">

                    <thead style="color:#ffffff;" class="bg-dark prn-thead">

                        <tr>
                            <th class="text-center" style="border-right:0.5px solid #ccc !important;">Ação</th>
                            <th class="text-center" style="border-right:1px solid #ccc !important;">Id</th>
                            <th style="border-right:1px solid #ccc !important;">Descrição</th>
                            <th class="text-center">Ativo</th>

                        </tr>
                    </thead>
                    <!--Corpo da Tabela-->
                    <tbody>
                        @foreach (var item in Model)
                        {

            <tr class="pr-td">
                <td class="text-center" style="width: 3%; border-right: 1px solid #ccc !important;">
                    <a class="p-1 prn-link" href="@Url.Action("Edit", "Perfil", new { id = item.Id })"><i class="fas fa-edit prn-link" style="color: #222D32"></i></a>
                    <a class="p-1 prn-link" href="@Url.Action("Detalhes", "Perfil", new { id = item.Id })"><i class="fas fa-eye prn-link" style="color: #222D32"></i></a>
                    <a class="p-1 prn-link" href="@Url.Action("Deletar", "Perfil", new { id = item.Id })"><i class="fas fa-trash-alt prn-link" style="color: #222D32"></i></a>


                </td>
                <td class="text-center" style="width: 2%; border-right: 1px solid #ccc !important;">
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td style="width: 20%;  border-right: 1px solid #ccc !important;">
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td class="text-center" style="width: 2%;">

                    @if (item.Ativo == true)
                    {

        <a class="p-1" href="@Url.Action("Edit", "Perfil", new { id = item.Id, atv = true })"><i style="font-size:1.5em;" class="fas fa-smile-beam"></i></a> }
    else
    {
        <a class="p-1" href="@Url.Action("Edit", "Perfil", new { id = item.Id, atv = false })"><i style="font-size:1.5em;" class="far fa-frown-open"></i></a>}

                </td>



            </tr>
}
                    </tbody>

                </table>








                <!--Rodape-->
                <div>
                    <div style="float: right !important;" class="p-2">
                        <p>
                            <span> Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount </span>
                        </p>
                    </div>

                    <div style="float:right;" class="p-2 pr-fontalternativa">
                        @Html.PagedListPager(
                                                                                                                            Model, page => Url.Action("Index", new
                                                                                                                            {
                                                                                                                                page,
                                                                                                                                filtroCorrente = ViewBag.FiltroCorrente,
                                                                                                                                filtroEmpresa = ViewBag.FiltroCorrenteEmpresa,
                                                                                                                                numeroLinhas = ViewBag.NumeroLinhas,
                                                                                                                                inputStatus = ViewBag.Status
                                                                                                                            }),
                                                                                                                            new PagedListRenderOptions()
                                                                                                                            {
                                                                                                                                LiElementClasses = new List<string>
                                                                                                                                {
                                                      "page-item"
}
                                                                                                                            }

                                                                                                                            )


                    </div>
                </div>
            </div>



        </div>

       <div class="card-footer">
           Total de itens:  @Model.TotalItemCount

       </div>
    </div>


</div>

