@model TJTransportesApp.Models.Usuario
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Paulo Roberto Nogueira">
    <link rel="icon" type="image/png" href="~/Content/Img/logo.ico" />
    <title>Tj-Transportes</title>

    <!-- Custom fonts for this template-->
    <link href="~/Content/SbAdmin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->

    <link href="~/Content/SbAdmin/css/sb-admin-2.css" rel="stylesheet">

</head>

<body class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <!--imagem marior-->
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>

                            <!--Form-->
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center" width="100px;" height="45px;">
                                        <img class="mb-4" src="~/Content/Img/logo.png" alt="Logo" style="width:20%;">
                                        <h1 class="h4 text-gray-900 mb-1">Sistema de Gestão e Frota</h1>
                                        <span style="font-size:0.8rem;" class="text-gray-900 mb-4">V.:1.0101-2022 </span>
                                    </div>

                                    <!--Mensagens de Erro-->
                                    @if (ViewBag.Message == "Usuário não encontrato!")
                                    {
                                       
                                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                            <strong> @ViewBag.Message</strong> 
                                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                    }
                                    @if (ViewBag.Message == "Senha incorreta!")
                                    {
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <strong> @ViewBag.Message</strong>
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                    }

                                    @if (ViewBag.Message == "Por favor digite sua senha")
                                    {
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <strong> @ViewBag.Message</strong>
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                    }


                                    <!--Fomulario-->
                                    @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "user" }))
                                    {
                                        <div class="form-group">

                                            @Html.TextBoxFor(m => m.Login, new { @class = "form-control form-control-user", placeholder = "Digite seu login", id = "exampleInputEmail" })

                                        </div>
                                        <div class="form-group">

                                            @Html.PasswordFor(m => m.Senha, new { @class = "form-control form-control-user", id = "exampleInputPassword", placeholder = "Digite sua senha" })

                                        </div>
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                <input type="checkbox" class="custom-control-input" id="customCheck">
                                                <label class="custom-control-label" for="customCheck">
                                                    Lembrar login
                                                </label>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-user btn-block"> <i class="fas fa-door-open" style="font-size:1.3rem;"></i> &nbsp; &nbsp; Entrar</button>}

                                    @*<a href="index.html" class="btn btn-primary btn-user btn-block" style="font-size:1.3rem;">

        </a>*@
                                    <hr>



                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="forgot-password.html">Esqueceu a Senha?</a>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>
        <div class="row justify-content-center">
            <footer>
                <span style="color:#ccc; font-size:0.9rem;">Copyright © - TJ Transporntes Ltda - Gestão e Frota - Versão: 1.0101-2022</span>
            </footer>
        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/Content/SbAdmin/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/SbAdmin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Content/SbAdmin/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Content/SbAdmin/js/sb-admin-2.min.js"></script>

    <script>
        $(document).ready(function () {
            setTimeout(function () {
                $(".alert").fadeOut("slow", function () {

                    $(this).alert('close');
                });

            }, 5000);
        });
    </script>
</body>

</html>
